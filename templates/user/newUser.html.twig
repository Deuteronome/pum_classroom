{% extends 'base.html.twig' %}

{% block javascripts %}
   {{ parent() }}
   <script src="{{ asset('avatarPreview.js')}}" defer></script>
{% endblock %}



{% block main %}
    <main class="container-fluid p-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 box-custom">
                {{ form_errors(form) }}
                {{ form_start(form) }}      
                <div class="row align-items-center">
                    <div class="col-12 col-lg-8 pe-5">
                        {{ form_row(form.firstname)}}
                        {{ form_row(form.lastname)}}
                        {{ form_row(form.pseudo)}}
                        {{ form_row(form.email)}}
                        {{ form_row(form.code)}}
                        {{ form_row(form.plainPassword)}}
                        {{ form_row(form.passwordConfirm)}}         
                
                    </div>
                    <div class="col-12 col-lg-4 ps-5 text-center">
                        <img id="avatar-preview" src="{{ asset('images/avatar/default.png')}}" alt="avatar" class="img-fluid">  
                        {{ form_row(form.avatar)}}
                    </div>
                    <div class="col-12">
                                      
                        {{ form_row(form.create)}}
                    </div>
                </div>
                {{ form_end(form) }} 
            </div>
        </div>
    </main>
{% endblock %}
